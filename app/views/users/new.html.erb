<h1>Signup here!</h1>
<%= form_for(@user) do |f| %>
  <div class="form_fields">
    <%= f.label :name %>
    <%= f.text_field :name, :placeholder => "Insert your name here." %>
  </div>

  <div class="form_fields">
    <%= f.label :password %>
    <%= f.text_field :password, :placeholder => "Insert your password here." %>
  </div>

  <div class="form_fields">
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation, :placeholder => "Confirm your password here." %>
  </div>

  <% end %>
<form action="/users" method="POST">
  <input type="submit" />
